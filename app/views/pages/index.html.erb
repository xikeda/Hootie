<!--If the user is not signed in render this -->

<% if !user_signed_in? %>

    <!-- Not Signed In -->
    <style>
        body {
            /*Transparent film on BG to appear darker*/
            background: linear-gradient( 
                rgba(0,0,0, 0.3),
                rgba(0,0,0, 0.3)
            ), url("/squamish.jpg") no-repeat center center fixed;
            
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
        
        h1 {
            color: white;
            font-weight: bold;
            color: white;
        }
        
        .container-index {
            margin-right: 15%;
            margin-left: 15%;
        }
        
        .text {
            color: white;
            font-size: 150%;
        }
        
        .footer-links {
            text-align: center;
            color: white;
            margin-top: 20%;
            font-size: 90%;
        }
        
        .log-in {
            float: right;
            height: 100px;
            width: 300px;
            margin-top: 10%;
        }
        .sign-up {
            float: right;
            height: 200px;
            width: 300px;
        }
    </style>
    
    <div class="container-index row">
        <div class="col-sm-6">
             <h1>Welcome to Hootie!</h1>
            <p class="text">See what's happening in the world right now. From breaking news and entertainment to sports and politics, get the full story with all the live commentary.</p>
        </div>
        
       <div class="col-sm-6">
             <div class="log-in panel">
                   <%= form_for(:user, :url => session_path(:user)) do |f| %>
                      <%= f.text_field :email %>
                      <%= f.password_field :password %>
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                      <%= f.submit 'Sign in' %>
                      <%= link_to "Forgot your password?", new_password_path(:user) %>
                    <% end %>
             </div>
             <div class="sign-up panel">
                     New to Hootie? Sign up
                     <%= form_for(:user, url: registration_path(:user)) do |f| %>
                     <%= f.label :username %><br />
                     <%= f.text_field :username, autofocus: true %>
                   
                     <%= f.label :email %><br />
                     <%= f.email_field :email %>
                  
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "off" %> 
                   
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "off" %> 
                   
                      <%= f.submit "Sign up" %>
  
                      <% end %>﻿
             </div>
       </div>
       
       <div class="col-sm-12">
          <p class="footer-links">About  Help  Blog  Status  Terms  Privacy  Brand  Advertise  Businesses  Media  Developers  Directory  © 2017 Hootie</p>
       </div>

    </div>
    
<% else %>
    
    <!-- Signed in -->
    <script>document.location = '/home'</script>
    
<% end %>